### outputs ###
output eDP-1 {
  resolution 3840x2160@60Hz
  position 0 0
  scale 2
  scale_filter nearest
  background /home/jigish/dotfiles/backgrounds/groot.png fill
}
output DP-1 {
  resolution 3440x1440@99.982Hz
  position -3440 0
  scale 1
  scale_filter nearest
  background /home/jigish/dotfiles/backgrounds/groot.png fit #2E3440
  subpixel vrgb
}

### variables ###
# logo key
set $mod Mod4
# vim movement
set $left h
set $down j
set $up k
set $right l
# default terminal
set $term foot
# nord colors
set $polar_night_0 #2E3440
set $polar_night_1 #3B4252
set $polar_night_2 #434C5E
set $polar_night_3 #4C566A
set $snow_storm_0 #D8DEE9
set $snow_storm_1 #E5E9F0
set $snow_storm_2 #ECEFF4
set $frost_green #8FBCBB
set $frost_cyan #88C0D0
set $frost_blue #81A1C1
set $frost_dark_blue #5E81AC
set $aurora_red #BF616A
set $aurora_orange #D08770
set $aurora_yellow #EBCB8B
set $aurora_green #A3BE8C
set $aurora_purple #B48EAD

### input configuration
seat seat0 xcursor_theme Nordzy-cursors
input "2:7:SynPS/2_Synaptics_TouchPad" {
   dwt enabled
   dwtp enabled
   tap disabled
   natural_scroll disabled
   middle_emulation disabled
   pointer_accel 1
}

### nag config ###
set $nag exec swaynagmode
mode "nag" {
  bindsym {
    Ctrl+d    mode "default"

    Ctrl+c    $nag --exit
    q         $nag --exit
    Escape    $nag --exit

    Return    $nag --confirm

    Tab       $nag --select prev
    Shift+Tab $nag --select next

    Left      $nag --select next
    Right     $nag --select prev

    Up        $nag --select next
    Down      $nag --select prev
  }
}

### borders ###
smart_borders on
default_border pixel 1
default_floating_border pixel 1
#                        border         background     text          indicator      child_border
client.focused           $snow_storm_0  $polar_night_0 $snow_storm_2 $snow_storm_0  $snow_storm_0
client.focused_inactive  $polar_night_3 $polar_night_0 $snow_storm_2 $polar_night_3 $polar_night_3
client.focused_tab_title $polar_night_3 $polar_night_0 $snow_storm_2
client.unfocused         $polar_night_0 $polar_night_0 $snow_storm_2 $polar_night_0 $polar_night_0
client.urgent            $aurora_red    $polar_night_0 $snow_storm_2 $aurora_red    $aurora_red

#$$ gaps ###
smart_gaps on
gaps inner 3
gaps outer 3

### lock screen and idle ###
exec swayidle -w \
  timeout 300 'swaylock -C /home/jigish/.config/swaylock/config' \
  timeout 600 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' \
  before-sleep 'swaylock -C /home/jigish/.config/swaylock/config'

### notifications ###
exec_always (killall dunst || true) && dunst

### launcher ###
set $menu fuzzel

### application workspaces ###
assign [app_id="foot"] workspace number 1
assign [app_id="brave-browser"] workspace number 2
# because we use brave for slack, we're going to assign it to workspace 3 manually
assign [app_id="tidal-hifi"] workspace number 4

### key bindings ###
bindsym $mod+Shift+grave exec swaylock -C /home/jigish/.config/swaylock/config
# start terminal
bindsym $mod+t exec $term
# kill current window
bindsym $mod+Shift+q kill
# start launcher
bindsym $mod+space exec $menu
# logo+tab
bindsym $mod+tab workspace back_and_forth
# reload the configuration file
bindsym $mod+Shift+c reload
# exit sway
bindsym $mod+Shift+e $nag -t warning -m 'exit sway?' -B 'yes' 'swaymsg exit'
# move focus around
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right
# move the focused window with the same, but add shift
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right
# move the focused workspace with the same, but add ctrl
bindsym $mod+Ctrl+$left move workspace to output left
bindsym $mod+Ctrl+$down move workspace to output down
bindsym $mod+Ctrl+$up move workspace to output up
bindsym $mod+Ctrl+$right move workspace to output right
# switch to workspace
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10
# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10
# move the currently focused window to the scratchpad
bindsym $mod+Shift+minus move scratchpad
# show the next scratchpad window or hide the focused scratchpad window.
# if there are multiple scratchpad windows, this command cycles through them.
bindsym $mod+minus scratchpad show
# do things with mod for floating windows
floating_modifier $mod normal
# toggle the current focus between tiling and floating mode
bindsym $mod+Shift+f floating toggle
# swap focus between the tiling area and the floating area
bindsym $mod+f focus mode_toggle
# audio control
set $volctrl exec wpctl set-volume -l 1 @DEFAULT_AUDIO_SINK@
set $volnotify wpctl get-volume @DEFAULT_AUDIO_SINK@ |awk '{print "-h int:value:" $2 " -a " ($3==""?"volume":$3)}' |sed 's/\[MUTED\]/volume-muted/' |sed 's/\.//' |xargs dunstify "" -t 1000
bindsym XF86AudioRaiseVolume $volctrl 5%+ && $volnotify
bindsym XF86AudioLowerVolume $volctrl 5%- && $volnotify
bindsym XF86AudioMute exec wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle && $volnotify
set $micnotify wpctl get-volume @DEFAULT_AUDIO_SOURCE@ |awk '{print "-h int:value:" $2 " -a " ($3==""?"mic":$3)}' |sed 's/\[MUTED\]/mic-muted/' |sed 's/\.//' |xargs dunstify "" -t 1000
bindsym XF86AudioMicMute exec wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle && $micnotify
set $playnotify playerctl -p tidal-hifi status |awk '{print $1}' |tr '[:upper:]' '[:lower:]' | sed 's/^/-a player-/' |xargs dunstify "" -t 1000
bindsym XF86AudioPlay exec playerctl -p tidal-hifi play-pause && $playnotify
# brightness control
set $lightnotify doas light -G |cut -d'.' -f1 |sed 's/^/-h int:value:/' | xargs dunstify "" -a brightness -t 1000
bindsym XF86MonBrightnessUp exec doas light -A 5 && $lightnotify
bindsym XF86MonBrightnessDown exec doas light -U 5 && $lightnotify

# manual resize mode
mode "resize" {
  # left will shrink the containers width
  # right will grow the containers width
  # up will shrink the containers height
  # down will grow the containers height
  bindsym $left resize shrink width 10px
  bindsym $down resize grow height 10px
  bindsym $up resize shrink height 10px
  bindsym $right resize grow width 10px
  # return to default mode
  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

### waybar ###
bar {
  swaybar_command waybar
}
