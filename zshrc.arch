# arch-specific shit

# explicitly some XDG stuff
export XDG_CONFIG_HOME=${HOME}/.config
export XDG_DATA_HOME=${HOME}/.local/share
export XDG_STATE_HOME=${HOME}/.local/state

function postlogin {
  # login shell. lets upgrade all the things.
  fastfetch
  echo
  echo "welcome ${USER}. upgrade all the things? q for quit."
  read -n 1 r
  if [[ "$r" = "q" ]]; then
    echo "exiting"
    exit 0
  fi
  ~/dotfiles/bootstrap.sh
}
