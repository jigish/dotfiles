# arch-specific shit

if [[ -o login ]]; then
  # login shell. lets upgrade all the things.
  echo "welcome ${USER}. upgrade all the things? q for quit."
  read -n 1 r
  if [[ "$r" = "q" ]]; then
    echo "exiting"
    exit 0
  fi
  ~/dotfiles/bootstrap.sh

  echo "start de? q for quit."
  read -n 1 r
  if [[ "$r" = "q" ]]; then
    echo "exiting"
    exit 0
  fi
  de
fi
